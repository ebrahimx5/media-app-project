<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <h1> Edit Film</h1>

    <form action="/film/edit/<%= foundFilm._id%>" method="post">

        <label for="filmName"> Film name</label>
        <input id="filmName" name="filmName" value="<%= foundFilm.filmName%>" type="text">

        <label for="genre">Genre</label>
        <select name="genres" id="genres">
          
            <% genres.forEach((oneGengre)=>{%>

                <option <% if(oneGengre === foundFilm.genre) {%> selected <%}%> value="<%= oneGengre %>">
                    <%= oneGengre %>
                </option>
                <% }) %>
        </select>

        <label for="ageRating">Age Rating</label>
        <select name="ageRating" id="ageRating">
            <% ageRating.forEach((oneRating)=>{%>

                <option <% if(oneRating === foundFilm.ageRating) {%> selected <%}%>  value="<%= oneRating %>"><%= oneRating %></option>
            
            <% }) %>
        </select>

        <label for="rating">Rating</label>
        <input value="<%= foundFilm.rating %>"  id="rating" name="rating" type="number">

        <label for="review">Review</label>
        <input value="<%= foundFilm.review %>" id="review" name="review" type="text">


        <button >Update</button>

    </form>

</body>

</html>